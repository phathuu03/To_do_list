<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_notepad"
    tools:context=".fragment.StartFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_logo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/logo_notepad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_text_logo"
        android:layout_width="140dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_text_notepad"
        app:layout_constraintEnd_toEndOf="@+id/ic_logo"
        app:layout_constraintStart_toStartOf="@+id/ic_logo"
        app:layout_constraintTop_toBottomOf="@+id/ic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:text="@string/txt_action_ads"
        android:textColor="#FFE380"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        app:drawableTopCompat="@drawable/ic_pencil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_text_logo"
        app:layout_constraintStart_toStartOf="@+id/img_text_logo"
        app:layout_constraintTop_toBottomOf="@+id/img_text_logo"
        app:layout_constraintVertical_bias="0.85"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_text_logo"
        app:layout_constraintStart_toStartOf="@+id/img_text_logo"
        app:layout_constraintEnd_toEndOf="@+id/img_text_logo"
        android:layout_marginTop="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>